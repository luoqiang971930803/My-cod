<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rela_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ff00"
        android:gravity="center"
        app:layout_heightPercent="30%">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_def_icon"/>
        <TextView
            android:layout_toRightOf="@id/im_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="8%"
            android:text="账户:1888000\n昵称:壁虎\n余额:66.00"
            />
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="70%"
        android:orientation="vertical"
        android:background="#ff0000"
        >
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="我的资料"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="我的消息"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="商家优惠"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="小e精灵"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="意见反馈"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="好友邀请"
           app:rightDrawblw="@drawable/arrow_right"
            app:rightText="已经邀请0人"
            app:rightTextShow="true"/>
        <com.bihu.xiyi.view.SettingItemView
            android:id="@+id/popup_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="分享"
            app:rightDrawblw="@drawable/arrow_right"/>
        <com.bihu.xiyi.view.SettingItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftDrawble="@drawable/my_data"
            app:leftText="设置"
            app:rightDrawblw="@drawable/arrow_right"/>
    </LinearLayout>
    </ScrollView>
</android.support.percent.PercentRelativeLayout>